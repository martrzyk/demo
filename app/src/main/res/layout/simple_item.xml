<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/name_of_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/name" />

    <TextView
        android:id="@+id/name_of_repo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/name_of_repo"
        android:gravity="end"
        tools:text="Name of Re;po " />

    <TextView
        android:id="@+id/login_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_repo"
        android:text="@string/login" />

    <TextView
        android:id="@+id/login_of_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_repo_tv"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/login_of_user"
        android:gravity="end"
        tools:text="login usera " />

    <TextView
        android:id="@+id/size_of_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_of_user"
        android:text="@string/size_of_repo" />

    <TextView
        android:id="@+id/size_of_repo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_of_user_tv"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/size_of_repo"
        android:gravity="end"
        tools:text=" 250000 mb " />
</RelativeLayout>